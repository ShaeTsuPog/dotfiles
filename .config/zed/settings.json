{
  "languages": {
    "CSS": {
      "indent_guides": {
        "background_coloring": "disabled",
      },
    },
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "prettier": {
    "allowed": false,
  },
  "text_rendering_mode": "subpixel",
  "icon_theme": "Colored Zed Icons Theme Dark",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "session": {
    "trust_all_worktrees": true,
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "ui_font_family": "Roboto",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "theme": "Vague",
  "experimental.theme_overrides": {
    "syntax": {
      "tag": {
        "color": "#8ba9c1",
      },
      "class": {
        "color": "#d8647e",
      },
      "id": {
        "color": "#6e94b2",
      },
      "pseudo": {
        "color": "#f5cb96",
      },
      "unit": {
        "color": "#f3be7c",
      },
      "variable": {
        "color": "#c9b1ca",
      },
      "property": {
        "color": "#bebeda",
      },
    },
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
  },
  "tab_size": 2,
  "hard_tabs": false,
  "disable_ai": true,
  "colorize_brackets": true,
  "lsp_document_colors": "background",
  "lsp": {
    "lua-language-server": {
      "settings": {
        "Lua": {
          "diagnostics": {
            "globals": ["vim"],
          },
          "workspace": {
            "library": ["/usr/share/nvim/runtime"],
            "checkThirdParty": false,
          },
        },
      },
    },
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_close_button": "hidden",
  },
}
